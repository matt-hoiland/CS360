#include <iostream>
#include <sstream>
#include <stdexcept>

#include <unistd.h>
#include <sys/stat.h>

using namespace std;

int main(int argc, char** argv) {
	cout << "This is the part when..." << endl;

	bool debug = false;

	int option;
	while ((option = getopt(argc, argv, "d")) != -1) {
		switch (option) {
		case 'd' :
			debug = true;
			break;
		}
	}

	int port;
	istringstream num(argv[optind]);
	if (!(num >> port)) {
		cout << "USAGE: port should be a number, given: " << argv[optind] << endl;
	}
	string dir = argv[optind + 1];
	return 0;
}
